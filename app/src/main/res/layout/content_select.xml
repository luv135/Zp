<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SelectActivity"
    tools:showIn="@layout/activity_select">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/action"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:text="我掐指一算,眼前一定是"
        android:textColor="@color/red"
        android:textSize="19sp" />

    <LinearLayout
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <Button android:id="@+id/boy"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:background="@drawable/circle"
            android:text="帅哥哥"
            android:textColor="#ff00bbee"
            android:textSize="19sp" />

        <Space
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button android:id="@+id/girl"
            android:layout_width="115dp"
            android:textSize="19sp"
            android:layout_height="115dp"
            android:background="@drawable/circle"
            android:text="小美女"
            android:textColor="#ffe8324d" />
    </LinearLayout>
    <com.luo.zp.views.RevealBackgroundView
        android:id="@+id/actionBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
